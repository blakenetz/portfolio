{
  "extends": "../../tsconfig.json",
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "types": ["@remix-run/node", "vite/client"],
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",

    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "module": "ESNext"
  }
}
