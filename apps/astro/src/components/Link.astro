---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}
const { class: className, ...props } = Astro.props;
---

<span class:list={["group relative", className]}>
  <a {...props}><slot /></a>
  <span
    class="bg-primary absolute -bottom-1 left-0 h-1 w-0 transition-all group-hover:w-full"
  ></span>
</span>
