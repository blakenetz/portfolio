---
import type { ImageMetadata } from "astro";

import { Image } from "astro:assets";
import pepita from "~/assets/pepita/close-up.png";
import { ANIMATE_COLORS_CLASSES } from "~/consts";
import RootLayout from "~/layouts/Root.astro";

type ImageComponent = () => Promise<{ default: ImageMetadata }>;

const images = Object.values(
  import.meta.glob<{
    default: ImageMetadata;
  }>("/src/assets/pepita/gallery/*.{jpg,jpeg,png}"),
).reduce<ImageComponent[][]>((acc, image, i) => {
  console.log(image);
  if (i % 2 === 0) acc.push([]);
  acc[acc.length - 1].push(image);
  return acc;
}, []);
---

<RootLayout
  layoutProps={{ showCheckerboard: true, showNav: true, class: "items-center" }}
  headProps={{
    title: "BN | Pepita",
    description: "Good girl, good doggo",
  }}
>
  <h1 class="text-xl font-bold">
    <span class=`${ANIMATE_COLORS_CLASSES} text-6xl`>Pepita!</span> (and friends)
  </h1>

  <div class="w-full max-w-7xl">
    <Image src={pepita} alt="Pepita" fit="contain" fetchpriority="high" />
  </div>

  <div class="grid grid-cols-2 gap-2 p-2 md:grid-cols-3 lg:grid-cols-4">
    {
      images.map((column) => (
        <div class="grid gap-2">
          {column.map((image) => (
            <div class="aspect-auto overflow-hidden rounded-sm">
              <Image
                src={image()}
                alt=""
                class="h-full w-full rounded-sm object-cover"
              />
            </div>
          ))}
        </div>
      ))
    }
  </div>
</RootLayout>
