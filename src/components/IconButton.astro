---
import type { Polymorphic, HTMLTag } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag;
  bg?: "dodger-blue" | "white";
}>;

const {
  class: className,
  as: Tag = "button",
  bg = "white",
  ...props
} = Astro.props as Props<"button">;
---

<Tag
  class:list={[
    className,
    "rounded-full p-2 transition-colors hover:cursor-pointer",
    { "bg-dodger-blue/70 hover:bg-dodger-blue/40": bg === "dodger-blue" },
    { "bg-white/0 hover:bg-white/30": bg === "white" },
  ]}
  {...props}
>
  <slot />
</Tag>
