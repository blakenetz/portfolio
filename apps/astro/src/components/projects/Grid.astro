---
import type { Polymorphic, HTMLTag } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{
  as: Tag;
}>;

const { as: Tag = "div", class: className, ...props } = Astro.props;
---

<Tag
  {...props}
  class:list={["grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4", className]}
>
  <slot />
</Tag>
