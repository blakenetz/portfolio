{
  "name": "@portfolio/scripts",
  "scripts": {
    "start:dev": "pnpm run -F scripts tsx-dev scripts/start.ts development",
    "start:prod": "pnpm run -F scripts tsx-prod scripts/start.ts production",
    "tsx-dev": "NODE_ENV=development tsx --env-file .env --env-file .env.development",
    "tsx-prod": "NODE_ENV=production tsx --env-file .env --env-file .env.production",
    "run:dev": "npm run tsx-dev scripts/index.ts",
    "run:prod": "npm run tsx-prod scripts/index.ts",
    "create:post": "tsx scripts/new-blog-post.ts"
  },
  "dependencies": {
    "tsx": "^4.19.2"
  }
}
