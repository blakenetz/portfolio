---
export const size = 4;
const vLineClass = `v-line absolute -translate-x-2 top-0 h-0 w-${size} rounded-full bg-linear-to-t/shorter from-white via-gray-300 to-transparent `;
const hLineClass = `h-line absolute -translate-y-2 left-0 h-${size} w-0 rounded-full bg-linear-to-r/longer from-white via-gray-300 to-transparent `;
---

<style>
  .h-line {
    animation: drawHLine 1.5s forwards ease-in-out 0.5s;
  }

  .v-line {
    animation: drawVLine 1.5s forwards ease-in-out 0.5s;
  }

  @keyframes drawHLine {
    0% {
      width: 0%;
    }
    100% {
      width: 100%;
    }
  }

  @keyframes drawVLine {
    0% {
      height: 0%;
    }
    100% {
      height: 100%;
    }
  }
</style>

<div class="pointer-events-none absolute inset-0 size-full">
  <div class="hidden xl:block">
    <div class:list={[hLineClass, "top-1/2"]}></div>
    <div class:list={[vLineClass, "left-1/3"]}></div>
    <div class:list={[vLineClass, "left-2/3"]}></div>
  </div>

  <div class="hidden md:block xl:hidden">
    <div class:list={[hLineClass, "top-1/3"]}></div>
    <div class:list={[hLineClass, "top-2/3"]}></div>
    <div class:list={[vLineClass, "left-1/2"]}></div>
  </div>
  <div class="hidden sm:block md:hidden">
    <div class:list={[hLineClass, "top-1/6"]}></div>
    <div class:list={[hLineClass, "top-2/6"]}></div>
    <div class:list={[hLineClass, "top-3/6"]}></div>
    <div class:list={[hLineClass, "top-4/6"]}></div>
    <div class:list={[hLineClass, "top-5/6"]}></div>
  </div>
</div>
