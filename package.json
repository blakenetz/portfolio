{
  "name": "portfolio",
  "description": "personal portfolio site",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "version": "3.0.0",
  "scripts": {
    "dev": "remix vite:dev",
    "build": "remix vite:build",
    "start": "NODE_ENV=production remix-serve ./build/server/index.js",
    "deploy": "fly deploy --remote-only",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc",
    "tsx-dev": "NODE_ENV=development tsx --env-file .env --env-file .env.development",
    "create:post": "tsx scripts/new-blog-post.ts",
    "db:blog-pull": "npm run tsx-dev scripts/blog-pull.ts",
    "db:blog-push": "npm run tsx-dev scripts/blog-push.ts",
    "db:restart": "npm run tsx-dev scripts/db-restart",
    "db:seed": "npm run tsx-dev scripts/db-seed",
    "db:setup": "npm run db:restart && npm run db:seed && npm run db:blog-push && npm run db:blog-pull"
  },
  "dependencies": {
    "@mantine/core": "^7.11.1",
    "@mantine/hooks": "^7.11.1",
    "@remix-run/node": "^2.10.2",
    "@remix-run/react": "^2.10.2",
    "@remix-run/serve": "^2.10.2",
    "@tabler/icons-react": "^2.47.0",
    "date-fns": "^3.6.0",
    "isbot": "^5.1.12",
    "lru-cache": "^10.2.0",
    "mongodb": "^6.8.0",
    "octokit": "^3.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remix-auth": "^3.7.0",
    "remix-auth-form": "^1.5.0",
    "remix-auth-github": "^1.7.0",
    "remix-auth-google": "^2.0.0",
    "unstorage": "^1.10.2"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.2",
    "@mdx-js/react": "^3.0.1",
    "@mdx-js/rollup": "^3.0.1",
    "@remix-run/dev": "^2.10.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "postcss": "^8.4.39",
    "postcss-preset-mantine": "^1.15.0",
    "postcss-simple-vars": "^7.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "to-vfile": "^8.0.0",
    "tsx": "^4.16.2",
    "typescript": "~5.4.0",
    "unified": "^11.0.5",
    "vfile-matter": "^5.0.0",
    "vite": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blakenetz/portfolio.git"
  },
  "keywords": [
    "portfolio"
  ],
  "author": "me... obviously <blake.netzeband@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blakenetz/portfolio/issues"
  },
  "homepage": "https://github.com/blakenetz/portfolio#readme"
}
