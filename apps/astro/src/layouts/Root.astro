---
import BaseHead from "~/components/BaseHead.astro";
import Background, {
  type BackgroundProps,
} from "~/components/Background.astro";
import type { BaseHeadProps } from "~/components/BaseHead.astro";
import Plant from "~/assets/plant.svg";

export type RootLayoutProps = {
  headProps: BaseHeadProps;
  layoutProps: BackgroundProps;
};
const { headProps, layoutProps } = Astro.props as RootLayoutProps;
---

<html lang="en">
  <head>
    <BaseHead {...headProps} />
  </head>
  <body
    class="bg-papaya-whip text-rich-black font-josefin-sans min-w-dvw min-h-dvh"
  >
    <Background {...layoutProps}>
      <slot />
    </Background>
  </body>
</html>
