---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  containerProps?: HTMLAttributes<"span">;
}
const {containerProps, ...props} = Astro.props;
---

<span {...containerProps} class:list={["group relative text-primary", containerProps?.class]}>
  <a {...props}><slot /></a>
  <span
    class="bg-primary absolute -bottom-1 left-0 h-1 w-0 transition-all group-hover:w-full"
  ></span>
</span>
