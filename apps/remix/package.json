{
  "name": "@portfolio/remix",
  "description": "personal portfolio site built with Remix",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm run -F remix tsx-dev scripts/start.ts development",
    "start": "pnpm run -F remix tsx-prod scripts/start.ts production",
    "build": "remix vite:build",
    "deploy": "fly deploy --remote-only",
    "tsx-dev": "NODE_ENV=development tsx --env-file ../../.env --env-file ../../.env.development",
    "tsx-prod": "NODE_ENV=production tsx --env-file ../../.env --env-file ../../.env.production",
    "run:dev": "pnpm run -F remix tsx-dev scripts/index.ts",
    "run:prod": "npm run -F remix tsx-prod scripts/index.ts",
    "create:post": "tsx scripts/new-blog-post.ts"
  },
  "dependencies": {
    "@mantine/code-highlight": "^7.14.3",
    "@mantine/core": "^7.14.3",
    "@mantine/hooks": "^7.14.3",
    "@mdx-js/react": "^3.1.0",
    "@remix-run/node": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "@remix-run/serve": "^2.15.0",
    "@tabler/icons-react": "^3.24.0",
    "date-fns": "^4.1.0",
    "isbot": "^5.1.17",
    "lru-cache": "^11.0.2",
    "mongodb": "^6.11.0",
    "nodemailer": "^6.9.16",
    "octokit": "^4.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.0.0",
    "remix-auth": "^3.7.0",
    "remix-auth-form": "^1.5.0",
    "remix-auth-github": "^1.7.0",
    "remix-auth-google": "^2.0.0",
    "unstorage": "^1.13.1"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.9",
    "@mdx-js/rollup": "^3.1.0",
    "@remix-run/dev": "^2.15.0",
    "@types/nodemailer": "^6.4.17",
    "@types/prompts": "^2.4.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@xmldom/xmldom": "^0.9.3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prompts": "^2.4.2",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "to-vfile": "^8.0.0",
    "tsx": "^4.19.2",
    "unified": "^11.0.5",
    "vfile-matter": "^5.0.0",
    "vite": "^5.4.14",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
